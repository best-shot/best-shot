{
  "private": true,
  "name": "best-shot",
  "version": "0.0.0",
  "description": "A webpack config tool chain",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/best-shot/best-shot",
  "repository": {
    "type": "git",
    "url": "https://github.com/best-shot/best-shot.git"
  },
  "bugs": {
    "url": "https://github.com/best-shot/best-shot/issues"
  },
  "scripts": {
    "analyze": "best-shot analyze",
    "build": "best-shot prod",
    "dev": "best-shot dev",
    "inspect": "best-shot inspect --stamp test",
    "lint": "nice-move lint",
    "prepare": "git config core.hooksPath .githooks",
    "serve": "best-shot serve",
    "test": "ava --fail-fast",
    "watch": "best-shot watch"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "vue": "^2.6.14"
  },
  "devDependencies": {
    "@babel/core": "^7.16.5",
    "@nice-move/cli": "^0.6.0",
    "@nice-move/commitlint-config": "^0.4.0",
    "@nice-move/eslint-config-base": "^0.5.75",
    "@nice-move/prettier-config": "^0.5.1",
    "@nice-move/stylelint-config": "^0.6.12",
    "@types/react": "^17.0.37",
    "ava": "^3.15.0",
    "commitlint": "^15.0.0",
    "delay": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-plugin-ava": "^13.1.0",
    "garou": "^0.3.4",
    "prettier": "^2.5.1",
    "stylelint": "^14.1.0",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "engines": {
    "node": "^14.17.0 || >=16.13.0"
  },
  "commitlint": {
    "extends": "@nice-move/commitlint-config"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base",
    "rules": {
      "no-await-in-loop": 0
    }
  },
  "garou": {
    "ignore": [
      "**/404.html"
    ]
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  },
  "x-readme": {
    "logo": "https://cdn.jsdelivr.net/gh/best-shot/best-shot/packages/core/logo.svg"
  }
}