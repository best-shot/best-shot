{
  "private": true,
  "name": "best-shot-repo",
  "version": "0.0.0",
  "description": "A webpack config tool chain",
  "license": "MIT",
  "author": {
    "name": "Eric Chen",
    "email": "airkro@qq.com"
  },
  "homepage": "https://github.com/best-shot/best-shot",
  "repository": {
    "type": "git",
    "url": "https://github.com/best-shot/best-shot.git"
  },
  "bugs": {
    "url": "https://github.com/best-shot/best-shot/issues"
  },
  "scripts": {
    "analyze": "best-shot analyze",
    "build": "best-shot prod",
    "dev": "best-shot dev",
    "inspect": "best-shot inspect --stamp test",
    "lint:staged": "nice-move lint staged",
    "lint:type": "tsc --noEmit",
    "prepare": "nice-move git hooks",
    "serve": "best-shot serve",
    "snapshot": "ava --fail-fast -u",
    "test": "ava --fail-fast",
    "try": "nodemon",
    "watch": "best-shot watch"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.22.17",
    "@bring-it/npm": "~0.2.10",
    "@nice-move/cli": "^0.10.11",
    "@nice-move/eslint-config-base": "^0.9.19",
    "@nice-move/prettier-config": "^0.9.3",
    "@nice-move/stylelint-config": "^0.9.5",
    "@nice-move/tsconfig": "^0.1.0",
    "@types/react": "^18.2.21",
    "ava": "^5.3.1",
    "eslint": "^8.49.0",
    "eslint-plugin-ava": "^14.0.0",
    "garou": "^0.6.13",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "engines": {
    "node": "^16.15.0 || ^18.12.0"
  },
  "eslintConfig": {
    "extends": "@nice-move/eslint-config-base"
  },
  "nice-move": {
    "import-groups": "nice-move-preset",
    "internal-regex": "^best-shot/"
  },
  "nodemonConfig": {
    "delay": 5,
    "exec": "best-shot serve",
    "ext": "js,cjs,mjs,json",
    "watch": [
      "packages/**",
      ".best-shot/config.mjs"
    ]
  },
  "prettier": "@nice-move/prettier-config",
  "stylelint": {
    "extends": "@nice-move/stylelint-config"
  },
  "x-readme": {
    "logo": "https://cdn.jsdelivr.net/gh/best-shot/best-shot/packages/core/logo.svg"
  }
}
